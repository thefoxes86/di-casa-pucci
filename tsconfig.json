{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"],
      "@/public/*": ["public/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/dog-three.jsx",
    "components/menu-toggle.jsx",
    "components/intro.jsx",
    "pages/korung/[slug].jsx",
    "pages/cani-dobermann/dobermann/[slug].jsx",
    "pages/posts/[slug].jsx",
    "pages/ztp/[slug].jsx"
  ],
  "exclude": ["node_modules"]
}
